{
  "name": "jsfr",
	"displayName": "Jasmine Single File Runner",
	"publisher": "AndresFlores",
	"author": {
		"name": "Andres Flores",
		"email": "andres.flores@outlook.fr"
	},
	"description": "",
	"version": "0.2.4",
	"engines": {
		"vscode": "^1.57.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:jsfr.testCurrentFile",
		"onCommand:workbench.action.tasks.runTask"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "jsfr.testCurrentFile",
				"title": "JSFR: Test Current File"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "jsfr.testCurrentFile",
					"when": "resourceFilename =~ /\\.spec\\.ts$/",
					"group": "0_jsfr"
				}
			],
			"explorer/context": [
				{
					"command": "jsfr.testCurrentFile",
					"when": "resourceFilename =~ /\\.spec\\.ts$/",
					"group": "0_jsfr"
				}
			]
		},
		"taskDefinitions": [
			{ "type": "ngTest" }
		]
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Searnd/jasmine-single-file-runner.git"
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"package": "vsce package -o dist/jsfr.vsix"
	},
	"devDependencies": {
		"@types/vscode": "^1.57.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
