{
  "name": "jsfr",
  "displayName": "Jasmine Single File Runner",
  "publisher": "AndresFlores",
  "author": {
    "name": "Andres Flores",
    "email": "andres.flores@outlook.fr"
  },
  "description": "",
  "version": "0.4.2",
  "engines": {
    "vscode": "^1.57.0"
  },
  "extensionDependencies": [
    "hbenl.vscode-test-explorer"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/angular.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jsfr.testCurrentFile",
        "title": "JSFR: Test Current File"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "jsfr.testCurrentFile",
          "when": "resourceFilename =~ /\\.spec\\.ts$/",
          "group": "0_jsfr"
        }
      ],
      "explorer/context": [
        {
          "command": "jsfr.testCurrentFile",
          "when": "resourceFilename =~ /\\.spec\\.ts$/ || explorerResourceIsFolder",
          "group": "0_jsfr"
        }
      ]
    },
    "taskDefinitions": [
      {
        "type": "ngTest"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Searnd/jasmine-single-file-runner.git"
  },
  "scripts": {
    "vscode:prepublish": "npm run -S esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run -S esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run -S esbuild-base -- --sourcemap --watch",
    "compile": "tsc -p ./",
    "deploy": "vsce publish",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package -o dist/jsfr.vsix"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.2",
    "@types/express": "^4.17.12",
    "@types/glob": "^7.1.3",
    "@types/karma": "^5.0.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "esbuild": "^0.12.14",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "vsce": "^1.95.0",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "cross-spawn": "^7.0.3",
    "express": "^4.17.1",
    "karma": "^6.3.16",
    "rxjs": "^7.2.0",
    "socket.io": "^4.2.0",
    "socket.io-client": "^4.1.3",
    "strip-json-comments": "^3.1.1",
    "tree-kill": "^1.2.2",
    "typescript": "^4.3.5",
    "vscode-test-adapter-api": "^1.9.0",
    "vscode-test-adapter-util": "^0.7.1"
  }
}
