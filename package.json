{
  "name": "jsfr",
  "displayName": "Jasmine Single File Runner",
  "publisher": "AndresFlores",
  "author": {
    "name": "Andres Flores",
    "email": "andres.flores@outlook.fr"
  },
  "description": "",
  "icon": "assets/images/logo-128-centered.png",
  "version": "0.6.4",
  "engines": {
    "vscode": "^1.76.0"
  },
  "extensionDependencies": [],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/angular.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jsfr.testCurrentFile",
        "title": "JSFR: Test current file"
      },
      {
        "command": "jsfr.testCurrentSelection",
        "title": "JSFR: Test currently selected file(s)"
      },
      {
        "command": "jsfr.testCurrentDirectory",
        "title": "JSFR: Test currenttly selected directory(ies)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "jsfr.testCurrentFile",
          "when": "resourceFilename =~ /\\.spec\\.ts$/",
          "group": "0_jsfr"
        }
      ],
      "explorer/context": [
        {
          "command": "jsfr.testCurrentSelection",
          "when": "resourceFilename =~ /\\.spec\\.ts$/",
          "group": "0_jsfr"
        },
        {
          "command": "jsfr.testCurrentDirectory",
          "when": "explorerResourceIsFolder",
          "group": "0_jsfr"
        }
      ]
    },
    "taskDefinitions": [
      {
        "type": "ngTest"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Searnd/jasmine-single-file-runner.git"
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "compile": "tsc -p ./",
    "deploy": "vsce publish",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package -o dist/jsfr.vsix"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.2",
    "@types/express": "^4.17.12",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "esbuild": "^0.12.14",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "vsce": "^1.103.1",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "cross-spawn": "^7.0.3",
    "express": "^4.18.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.7",
    "socket.io": "^4.5.4",
    "socket.io-client": "^4.5.1",
    "strip-json-comments": "^3.1.1",
    "tree-kill": "^1.2.2",
    "tsyringe": "^4.7.0",
    "typescript": "^4.9.3"
  }
}
